
<div class="card mx-auto mt-5" style="width: 30rem;">
<div class="card-header">
  <center><h1>Sign In</h1></center>
</div>
<div class="card-body">
<%= form_tag :action => 'signin' do %>

  <div class="row">
      <p><label for = "email">Email</label>:
      <%= text_field 'user', 'email', :class => "form-control" %></p>
      <p><label for = "password">Password</label>:
      <%= password_field 'user', 'password', :class => "form-control" %></p>
  </div>
  <%= submit_tag "Sign In", :class => "btn btn-primary float-end" %>
  <%= link_to 'Create Account', {:action => 'new', :controller =>'user'}, :class =>"float-start" %> 
  <% end -%>
</div>
</div>
